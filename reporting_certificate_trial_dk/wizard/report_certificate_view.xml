                                <h5>
                                    <span style="margin-left:20px;">
                                        <b>Client</b>
                                    </span>
                                </h5>
                            </div>
                        </group>
                    </group>
                    <group style="margin:0;">
                        <group>
                            <field name="company_id"/>
                            <field name="company_name"/>
                            <field name="company_adress"/>
                        </group>
                        <group>
                            <field name="partner_id" string="Client"/>
                            <field name="client_name"/>
                            <field name="client_adress"/>
