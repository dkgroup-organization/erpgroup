                    <!--                            <field name="client_adress"/>-->

                    <!--                        </group>-->
                    <group>
                        <group>
                            <div style="padding-top:5px;padding-bottom:5px;" class="bg-light">
                                <h5>
                                    <span style="margin-left:20px;">
                                        <b>Maître d’oeuvre d’éxecution</b>
                                    </span>
                                </h5>
                            </div>

                        </group>
                        <group>
                            <div style="padding-top:5px;padding-bottom:5px;" class="bg-light">
                                <h5>
                                    <span style="margin-left:20px;">
                                        <b>Contrôleur technique</b>
                                    </span>
                                </h5>
                            </div>

                        </group>

                    </group>

