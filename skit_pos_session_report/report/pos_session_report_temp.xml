<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- POS Session layout template -->
		<template id="pos_layout">
			<div class="article">
				<t t-call="skit_pos_session_report.pos_layout_header" />
				<t t-raw="0" />
			</div>
		</template>

		<!-- POS Session Header template -->
		<template id="pos_layout_header">
			<t t-if="o and 'company_id' in o">
				<t t-set="company" t-value="o.company_id"></t>
			</t>
			<t t-if="not o or not 'company_id' in o">
				<t t-set="company" t-value="res_company"></t>
			</t>
			<div class="header">
				<div class="row">
					<div class="col-xs-3 header_time">
						<span
							t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')" />
					</div>
					<div class="col-xs-3 col-xs-offset-1 header_company">
						<span t-esc="company.name" />
					</div>
					<div class="col-xs-2 col-xs-offset-3 header_pageno">
						<ul class="list-inline">
							<li>
								<span class="page" />
										/
								<span class="topage" />
							</li>
						</ul>
					</div>
				</div>
			</div>
		</template>


		<!-- POS Session Report template -->
		<template id="session_report">
			<t t-call="web.html_container">
				<t t-set="data_report_margin_top" t-value="12" />
				<t t-set="data_report_header_spacing" t-value="10" />
				<t t-set="data_report_dpi" t-value="110" />
				<t t-foreach="docs" t-as="o">
					<t t-call="skit_pos_session_report.pos_layout">
						<div class="page">
							<h2>POS Session Report</h2>
							<h3>
								<span t-field="o.name" />
							</h3>
							<div class="row mb32">
								<div class="col-xs-3 open_date_time">
									<strong>Opening Date/Time</strong>
									:
									<br />
									<span t-field="o.start_at" />
								</div>
								<div class="header_space"/>
								<div class="col-xs-3">
									<strong>Responsible</strong>
									:
									<br />
									<span t-field="o.user_id" />
								</div>
								<div class="header_space"/>
								<div class="col-xs-3">
									<strong>Point of Sale</strong>
									:
									<br />
									<span t-field="o.config_id" />
								</div>
								<div class="header_space"/>
								<div class="col-xs-3">
									<strong>Closing Date/Time</strong>
									:
									<br />
									<span t-field="o.stop_at" />
								</div>
							</div>
							<t t-foreach="o.statement_ids" t-as="statement">
								<table class="table table-condensed">
									<thead>
										<tr class="">
											<th>Journal</th>
											<th class="text-right">Starting Balance</th>
											<th class="text-right">Transactions Subtotal</th>
											<th class="text-right">Ending Balance</th>
											<th class="text-right">Difference</th>
											<th>Currency</th>
											<th>State</th>
										</tr>
									</thead>
									<tbody>
										<tr class="overlap">
											<td>
												<span t-field="statement.journal_id" />
											</td>
											<td class="text-right">
												<span t-field="statement.balance_start"
													t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' />
											</td>
											<td class="text-right">
												<span t-field="statement.total_entry_encoding"
													t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' />
											</td>
											<td class="text-right">
												<span t-field="statement.balance_end_real"
													t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' />
											</td>
											<td class="text-right">
												<span t-field="statement.difference"
													t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' />
											</td>
											<td>
												<span t-field="statement.currency_id" />
											</td>
											<td>
												<span t-field="statement.state" />
											</td>
										</tr>
									</tbody>
									<table class="table">
										<thead>
											<tr class="overlap">
												<th>Date/Time</th>
												<th>Description</th>
												<th>Customer Name</th>
												<th class="text-right">Amount</th>
											</tr>
										</thead>
										<tbody>
											<t t-foreach="statement.line_ids" t-as="line">
												<tr class="overlap">
													<td>
														<span t-field="line.date" t-options='{"format": "dd/MM/yyyy"}' />
													</td>
													<td>
														<span t-field="line.name" />
													</td>
													<td>
														<span t-esc="line.partner_id.name" />
													</td>
													<td class="text-right">
														<span t-field="line.amount"
															t-options='{"widget": "monetary", "display_currency": res_company.currency_id}' />
													</td>
												</tr>
											</t>
										</tbody>
									</table>
								</table>
							</t>
						</div>
					</t>
				</t>
			</t>
		</template>
	</data>
</odoo>
